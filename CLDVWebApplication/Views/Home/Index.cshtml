@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-3 fw-bold text-primary">Welcome to EventEase!</h1>
        <p class="lead text-muted">Easily manage your Venues, Events, and Bookings with a single platform.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-4 mb-4">
            <div class="card shadow-lg border-0 h-100 text-center">
                <div class="card-body">
                    <i class="bi bi-building text-primary display-4 mb-3"></i>
                    <h5 class="card-title">Venues</h5>
                    <p class="card-text">Add, edit, and manage venue details and availability.</p>
                    <a class="btn btn-outline-primary" asp-controller="Venue" asp-action="Index">Manage Venues</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-lg border-0 h-100 text-center">
                <div class="card-body">
                    <i class="bi bi-calendar-event text-success display-4 mb-3"></i>
                    <h5 class="card-title">Events</h5>
                    <p class="card-text">Create and track events scheduled across venues.</p>
                    <a class="btn btn-outline-success" asp-controller="Event" asp-action="Index">Manage Events</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-lg border-0 h-100 text-center">
                <div class="card-body">
                    <i class="bi bi-journal-check text-info display-4 mb-3"></i>
                    <h5 class="card-title">Bookings</h5>
                    <p class="card-text">Handle bookings with date and venue conflict checking.</p>
                    <a class="btn btn-outline-info" asp-controller="Booking" asp-action="Index">Manage Bookings</a>
                </div>
            </div>
        </div>
    </div>
</div>
